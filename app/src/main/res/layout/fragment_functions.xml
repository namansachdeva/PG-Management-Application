<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.naman.dev.royalgroup.Fragments.FunctionsFragment">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical">

        <Button
            android:id="@+id/uploadPhotobtn"
            android:layout_width="250dp"
            android:layout_height="0dp"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:background="@drawable/button_background"
            android:text="Upload Photo"
            android:textColor="@android:color/white"
            android:textSize="22sp" />

        <Button
            android:id="@+id/uploadIDbtn"
            android:layout_width="250dp"
            android:layout_height="0dp"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:background="@drawable/button_background"
            android:text="Upload ID"
            android:textColor="@android:color/white"
            android:textSize="22sp" />

        <Button
            android:id="@+id/newPaymentbtn"
            android:layout_width="250dp"
            android:layout_height="0dp"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:background="@drawable/button_background"
            android:text="New Payment"
            android:textColor="@android:color/white"
            android:textSize="22sp" />

        <Button
            android:id="@+id/changeRoombtn"
            android:layout_width="250dp"
            android:layout_height="0dp"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:background="@drawable/button_background"
            android:text="Change Room"
            android:textColor="@android:color/white"
            android:textSize="22sp" />

        <Button
            android:id="@+id/leavePGbtn"
            android:layout_width="250dp"
            android:layout_height="0dp"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:background="@drawable/button_background"
            android:text="Leave PG"
            android:textColor="@android:color/white"
            android:textSize="22sp" />


    </LinearLayout>
</FrameLayout>